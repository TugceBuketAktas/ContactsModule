@page "{id:int}"
@model ContactsModule.Pages.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Add Page</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <title>Edit Page</title>
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="card">
            <div class="card-body register-card-body">

                <h4>You can edit the contact's information @Model.Contacts.Firstname @Model.Contacts.Lastname </h4>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Contacts.ContactId" />
                <div class="form-group">
                    <label asp-for="Contacts.Job" class="control-label">Job</label>
                    <input asp-for="Contacts.Job" class="form-control" />
                    <span asp-validation-for="Contacts.Job" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contacts.Firstname" class="control-label">Firstname</label>
                    <input type="text" asp-for="Contacts.Firstname" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                    <span asp-validation-for="Contacts.Firstname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contacts.Lastname" class="control-label">Lastname</label>
                    <input asp-for="Contacts.Lastname" class="form-control" />
                    <span asp-validation-for="Contacts.Lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contacts.PhoneNumber" class="control-label">PhoneNumber</label>
                    <input asp-for="Contacts.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Contacts.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contacts.Email" class="control-label">Email</label>
                    <input asp-for="Contacts.Email" class="form-control" />
                    <span asp-validation-for="Contacts.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contacts.Address" class="control-label">Address</label>
                    <input asp-for="Contacts.Address" class="form-control" />
                    <span asp-validation-for="Contacts.Address" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
                <div asp-validation-summary="All"></div>
            </form>

                <div>
                    <a asp-page="./Index">Back to List</a>
                </div>

            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>

</body>
</html>
